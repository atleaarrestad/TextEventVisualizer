@namespace Components
@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public EventCallback Close { get; set; }

    [Parameter]
    public EventCallback<string> OnConfirm { get; set; }

    [Parameter]
    public string userInput { get; set; }
}

<div class="modal" style="display: @(IsOpen ? "block" : "none");">
    <div class="modal-content">
        <h2 class="modal-title">@Title</h2>
        <input type="text" @bind="userInput" class="modal-input" placeholder="Enter your text here" />
        <div class="action-container">
            <button class="confirm-button" @onclick="@(() => OnConfirm.InvokeAsync(userInput))">Confirm</button>
            <button class="cancel-button" @onclick="@(() => Close.InvokeAsync())">Cancel</button>
        </div>
    </div>
</div>

<style>
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        transition: opacity 0.3s ease;
    }

    .modal-content {
        background: white;
        margin: 10% auto;
        padding: 20px;
        width: 30%; 
        max-width: 400px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    }

    .modal-title {
        text-align: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        padding-bottom: 1rem;
    }

    .modal-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 10px;
        text-align: center;
    }

    .action-container {
        display: flex;
        justify-content: flex-end;
    }

    .confirm-button {
        background: #28a745;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-right: 10px;
    }

        .confirm-button:hover {
            background: #218838;
        }

    .cancel-button {
        background: #6c757d;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .cancel-button:hover {
            background: #5a6268;
        }

    .close {
        float: right;
        color: #aaa;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            cursor: pointer;
        }
</style>
